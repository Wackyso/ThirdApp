<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThirdApp.DBLogin">
    
    <StackLayout BackgroundColor="BurlyWood">

        <Label Text="Подключение к серверу"  
                   FontSize= "25"
                   VerticalOptions="Center" HorizontalOptions="Center" />
        <AbsoluteLayout BackgroundColor="BurlyWood">

            <Entry x:Name="loginEntry" Placeholder = "Login" AbsoluteLayout.LayoutBounds=".5, 180, 150, 40"
            AbsoluteLayout.LayoutFlags="XProportional" />
            <Entry x:Name="passwordEntry"  Placeholder = "Password" IsPassword ="True" AbsoluteLayout.LayoutBounds=".5, 240, 150, 40"
            AbsoluteLayout.LayoutFlags="XProportional" />
            <Button Text="Enter"   AbsoluteLayout.LayoutBounds=".5, 300, 100, 40"
            AbsoluteLayout.LayoutFlags="XProportional" Clicked="DB_Login"/>

        </AbsoluteLayout>

    </StackLayout>
</ContentPage>